<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="5.1-add-name-column-to-order-product" author="Wojtek">

        <addColumn tableName="order_product">
            <column name="name" type="VARCHAR(255)"/>
        </addColumn>

    </changeSet>

    <changeSet id="5.2-migrate-order-product-names" author="Wojtek" dbms="postgresql">

        <sql>
            UPDATE order_product
            SET name = p.name
            FROM product p
            WHERE p.id = order_product.product_id
        </sql>

    </changeSet>

    <changeSet id="5.3-add-not-null-constraint-to-order-product-name" author="Wojtek">

        <addNotNullConstraint tableName="order_product" columnName="name" columnDataType="VARCHAR(255)"/>

    </changeSet>

    <changeSet id="5.4-remove-shipping-vat-rate-from-order" author="Wojtek">

        <dropColumn tableName="internal_order" columnName="shipping_vat_rate"/>

    </changeSet>

    <changeSet id="5.5-add-volume-column-to-product" author="Wojtek">

        <addColumn tableName="product">
            <column name="volume" type="INT" defaultValueNumeric="null">
                <constraints nullable="true"/>
            </column>
        </addColumn>

    </changeSet>

    <changeSet id="5.6-add-unit-column-to-product" author="Wojtek">

        <addColumn tableName="product">
            <column name="unit" type="VARCHAR(10)" defaultValue="null">
                <constraints nullable="true"/>
            </column>
        </addColumn>

    </changeSet>

    <changeSet id="5.7-create-usage-record-table" author="Wojtek">
        <createTable tableName="usage_record">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="employee_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="usage_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="usage_reason" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="usage_record" baseColumnNames="product_id"
                                 constraintName="fk_usage_record_product"
                                 referencedTableName="product" referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="usage_record" baseColumnNames="employee_id"
                                 constraintName="fk_usage_record_employee"
                                 referencedTableName="employee" referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
